<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:text="Index"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/red_marker"
        android:textSize="20sp"
        android:background="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vitalsign"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/bg_execute_round"
            android:gravity="center"
            android:text="引流量"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_vitalsignvalue"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/tv_vitalsign"
            android:gravity="left|center"
            android:text="39度"
            android:textColor="#424242"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sync"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/tv_vitalsignvalue"
            android:gravity="center"
            android:text="已同步"
            android:clickable="true"
            android:textColor="@color/blue_marker" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />


</LinearLayout>