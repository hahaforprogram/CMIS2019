<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/table_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_1"
                    style="@style/btn_input_amount_style"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:text="拒测" />

                <Button
                    android:id="@+id/btn_2"
                    style="@style/btn_input_amount_style"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:text="39." />

                <Button
                    android:id="@+id/btn_3"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:text="38." />

                <Button
                    android:id="@+id/button"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:text="37.0" />

                <Button
                    android:id="@+id/button2"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:text="36.0" />
            </LinearLayout>

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_4"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"

                    android:layout_marginLeft="1dp"
                    android:text="外出" />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_marginRight="1dp"
                    style="@style/btn_input_amount_style"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_6"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="2" />

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="3" />

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="回退" />
            </LinearLayout>

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_7"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"

                    android:layout_marginLeft="1dp"
                    android:text="检查" />

                <Button
                    android:id="@+id/btn_8"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_9"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="5" />

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="6" />

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="清空" />
            </LinearLayout>

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_t"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"

                    android:layout_marginLeft="1dp"
                    android:text="手术" />

                <Button
                    android:id="@+id/btn_0"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="7" />

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="8" />

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="9" />

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="上一床" />

            </LinearLayout>

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"

                    android:layout_marginLeft="1dp"
                    android:text="入睡" />

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="请假" />

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="." />

                <Button
                    style="@style/btn_input_amount_style"
                    android:text="下一床" />

                <Button
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:background="@color/white"
                    android:text="保存" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>